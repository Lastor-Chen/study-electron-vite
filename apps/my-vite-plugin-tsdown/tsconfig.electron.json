{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.electron.tsbuildinfo",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist-electron",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./electron/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["electron", "shared"]
}
